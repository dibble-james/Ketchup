@model Ketchup.Model.Product.ProductAttributeType
@using (this.Html.BeginForm("AddProductAttributeType", "Home", FormMethod.Post))
{
    <div class="form-group">
        @this.Html.LabelFor(pat => pat.Name)
        @this.Html.TextBoxFor(pat => pat.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @this.Html.LabelFor(pat => pat.DisplayName)
        @this.Html.TextBoxFor(pat => pat.DisplayName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @this.Html.LabelFor(pat => pat.ValidationRegularExpression)
        @this.Html.TextBoxFor(pat => pat.ValidationRegularExpression, new { @class = "form-control" })
    </div>
     <button type="submit" class="btn btn-default">Submit</button>
}
